## Shell Aliases
alias zshconfig="st ~/.zshrc"
alias tconfig="st ~/.tmux.conf"
alias password="openssl rand -base64 32"
alias cat='bat'
alias ping='prettyping --nolegend'
alias preview="fzf --preview 'bat --color \"always\" {}'"
alias top="htop"
alias du="ncdu --color dark -rr -x"
alias edit='st $(preview)'
alias top="htop"
alias du="ncdu --color dark -rr -x"
alias l="ls -lahF"
alias ll="ls -F"
alias le="exa -lga --git"
alias lle="exa -Ta"
alias py="python3"
alias zshreload="source ~/.zshrc"
alias upgrade_global_npm="nvm use system && npm-check -gu && nvm use default"
