## Shell Aliases
alias zshconfig="st ~/.zshrc"
alias zshcustom="st $SUPERCHARGED/oh-my-zsh/custom"
alias tconfig="st ~/.tmux.conf"
alias password="openssl rand -base64 48"
alias cat='bat'
alias ping='prettyping --nolegend'
alias preview="fzf --preview 'bat --color \"always\" {}'"
alias top="htop"
alias edit='st $(preview)'
alias top="htop"
alias l="ls -lahF"
alias ll="ls -F"
alias le="exa -lga --git"
alias lle="exa -Ta"
alias py="python3"
alias zshreload="source ~/.zshrc"
alias update_packages="brew update && brew upgrade && brew cleanup && upgrade_oh_my_zsh && npm-check -gu"
